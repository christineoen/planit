<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-3">
    Trip Name: <%= @trip.name %>
  </div>
</div>

<div class="row">
  <h4>Trip Users</h4>
  <% @trip.users.each do |user| %>
    <div class="row">
      <div class="col-sm-3">
        Name: <%= link_to user.name, user %>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <h4>Destinations</h4>
  <% @trip.destinations.each do |destination| %>
    <div class="row">
      <div class="col-sm-3">
        Name: <%= destination.name %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
